{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "lib": ["dom", "es2021"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
